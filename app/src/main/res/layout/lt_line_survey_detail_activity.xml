                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold|italic" />

                    <Spinner
                        android:id="@+id/spn_int_pole_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border_spinner"
                        android:fontFamily="sans-serif-light"
                        android:minHeight="@dimen/_40dp"
                        android:spinnerMode="dialog"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spn_int_pole_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border_spinner"
                        android:fontFamily="sans-serif-light"
                        android:minHeight="@dimen/_40dp"
                        android:spinnerMode="dialog"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_int_pole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:hint="No of Poles Required"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minHeight="@dimen/_40dp"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Conductor"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold|italic" />

                    <Spinner
                        android:id="@+id/spn_cdtr_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border_spinner"
                        android:fontFamily="sans-serif-light"
                        android:minHeight="@dimen/_40dp"
                        android:spinnerMode="dialog"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spn_cdtr_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border_spinner"
                        android:fontFamily="sans-serif-light"
                        android:minHeight="@dimen/_40dp"
                        android:spinnerMode="dialog"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_cdtr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:hint="No of Conductors Required"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minHeight="@dimen/_40dp"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Any Other Remarks"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/border"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:minHeight="70dp"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_poletruesubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_5dp"
                android:background="@color/colorPrimary"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
