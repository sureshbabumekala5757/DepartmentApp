                    <LinearLayout
                        android:id="@+id/ll_polesdtrs"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5dp"
